<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="222dp"
        android:layout_marginStart="22dp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn1"
        android:layout_marginStart="109dp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_alignTop="@+id/btn1"
        android:text="3" />

    <Button
        android:id="@+id/sum"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn1"
        android:layout_marginEnd="14dp"
        android:text="+" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginBottom="161dp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/btn4"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn4"
        android:layout_marginEnd="102dp"
        android:text="6" />

    <Button
        android:id="@+id/sub"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sum"
        android:layout_alignTop="@+id/btn4"
        android:text="-" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginBottom="101dp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/btn7"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_alignTop="@+id/btn7"
        android:text="9" />

    <Button
        android:id="@+id/div"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sum"
        android:layout_alignTop="@+id/btn7"
        android:text="/" />

    <Button
        android:id="@+id/clear"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginBottom="37dp"
        android:text="CLEAR" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/clear"
        android:text="0" />

    <Button
        android:id="@+id/equal"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_alignTop="@+id/clear"
        android:text="=" />

    <Button
        android:id="@+id/mult"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sum"
        android:layout_alignTop="@+id/clear"
        android:text="*" />

    <TextView
        android:id="@+id/control"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="119dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/sum"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>